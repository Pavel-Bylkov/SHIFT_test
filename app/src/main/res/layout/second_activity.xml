<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:showDividers="middle"
    android:divider="@drawable/empty_tall_divider"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:text="BIN"
        android:textColor="@color/grey"
        android:layout_weight="80"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/bin"
        android:text="0000 0000"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_weight="20"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:text="SCHEME"
        android:textSize="20dp"
        android:textColor="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/scheme"
        android:text="Visa"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="BRAND"
        android:textSize="20dp"
        android:textColor="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/brand"
        android:text="Visa/Dankort"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="CARD NUMBER"
        android:textSize="20dp"
        android:textColor="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="LENGTH"
            android:textColor="@color/grey"
            android:layout_weight="2"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/number_length"
            android:text="16"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_weight="2"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="LUHN"
            android:textColor="@color/grey"
            android:layout_weight="2"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/number_luhn"
            android:text="Yes"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_weight="2"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:text="TYPE"
        android:textSize="20dp"
        android:textColor="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/type"
        android:text="Debit"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="PREPAID"
        android:textSize="20dp"
        android:textColor="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/prepaid"
        android:text="No"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="COUNTRY"
        android:textSize="20dp"
        android:textColor="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/country_alpha2"
            android:text="DK"
            android:textColor="@color/black"
            android:layout_weight="80"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/country_name"
            android:text="Denmark"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_weight="20"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="latitude:"
            android:textColor="@color/grey"
            android:layout_weight="2"
            android:textAlignment="center"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/country_latitude"
            android:text="56"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_weight="2"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="longitude:"
            android:textColor="@color/grey"
            android:layout_weight="2"
            android:textAlignment="center"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/country_longitude"
            android:text="10"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_weight="2"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:text="BANK"
        android:textSize="20dp"
        android:textColor="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/bank_name"
            android:text="Jyske Bank, "
            android:textColor="@color/black"
            android:layout_weight="40"
            android:gravity="right"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/bank_city"
            android:text="HjÃ¸rring"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_weight="60"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:id="@+id/prepaid"
        android:text="No"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/ok"
        android:text= "Ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>